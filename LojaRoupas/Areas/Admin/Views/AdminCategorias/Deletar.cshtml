@model LojaRoupas.Models.Categoria

@{
    ViewData["Title"] = "::LOJA ROUPA";
}

<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
</head>

<style>
    body {
        margin: 0;
        padding: 0;
        height: 100vh;
        font-family: Arial, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .card {
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        border: 1px solid #ccc;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 500px;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-check {
        margin-bottom: 1.5rem;
    }

    .btn-group {
        width: 100%;
    }

        .btn-group .btn {
            flex: 1;
        }
</style>

<h1 class="text-center mb-4">DELETAR CATEGORIA</h1>

<div class="row justify-content-center">
    <div class="col-md-12">
        <div class="card shadow-sm">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-6 font-weight-bold">Nome:</dt>
                    <dd class="col-sm-6">@Html.DisplayFor(model => model.Nome)</dd>

                    <dt class="col-sm-6 font-weight-bold">Data de Cadastro:</dt>
                    <dd class="col-sm-6">@Html.DisplayFor(model => model.DataDeCadastro)</dd>

                    <dt class="col-sm-6 font-weight-bold">Ativo:</dt>
                    <dd class="col-sm-6">
                        @if(Model.Ativo){
                            <span>Sim</span>
                        }
                        else{
                            <span>Não</span>
                        }
                    </dd>
                </dl>

                <form asp-action="Deletar" class="form-group mt-3 btn-group d-flex">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Deletar" class="btn btn-danger" /> 
                    <a asp-action="Index" class="btn btn-secondary">Retornar</a>
                </form>
            </div>
        </div>
    </div>
</div>