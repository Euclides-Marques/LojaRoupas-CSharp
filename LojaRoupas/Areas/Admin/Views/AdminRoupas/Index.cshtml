@model ReflectionIT.Mvc.Paging.PagingList<LojaRoupas.Models.Roupa>

@{
    ViewData["Title"] = "::LOJA ROUPA";
}

<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
</head>

<style>
    h1, .table th, .table td {
        text-align: center;
    }

    .btn-custom {
        margin-right: 5px;
    }

    .crud-actions a {
        margin: 0 10px;
    }

    h1 {
        margin-bottom: 20px;
    }

    .btn-success {
        margin-bottom: 20px;
    }

    .table {
        margin-top: 20px;
    }

    #nome {
        padding-top: 15px;
    }

    #btnVoltar {
        margin-left: 80%;
    }

    .search-bar h2 {
        font-size: 1.5rem;
        font-weight: bold;
    }

    .search-bar .input-group {
        max-width: 700px;
    }

    .search-bar .form-control {
        border: 2px solid #ddd;
        border-right: none;
        border-radius: 30px 0 0 30px;
        box-shadow: none;
    }

        .search-bar .form-control:focus {
            border-color: #007bff;
            outline: none;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    .search-bar .btn-primary {
        border-radius: 0 30px 30px 0;
        border: none;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(90deg, #007bff, #0056b3);
    }
</style>

<div class="search-bar py-4 px-3 mb-4">
    <form method="get" class="d-flex justify-content-center align-items-center">
        <div class="input-group w-75">
            <input name="filter"
                   class="form-control form-control-lg"
                   placeholder="Busque pelo nome da roupa..."
                   value="@Model.RouteValue["Filter"]" />
            <button type="submit" class="btn btn-primary btn-lg">
                <i class="fas fa-search"></i> Procurar
            </button>
        </div>
    </form>
</div>

<div class="container my-4">
    <h1>ROUPAS</h1>
    <a asp-action="Create" class="btn btn-success mb-3">Criar Roupa</a>
    <a asp-area="Admin" asp-controller="Admin" asp-action="Index" id="btnVoltar" class="btn btn-secondary mb-3">Voltar</a>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nome)</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var roupa in Model)
            {
                <tr>
                    <td id="nome">@Html.DisplayFor(modelItem => roupa.Nome)</td>
                    <td class="crud-actions">
                        <a asp-action="Editar" asp-route-id="@roupa.Id" class="btn btn-warning btn-custom">Editar</a>
                        <a asp-action="Detalhes" asp-route-id="@roupa.Id" class="btn btn-info btn-custom">Detalhes</a>
                        <a asp-action="Deletar" asp-route-id="@roupa.Id" class="btn btn-danger btn-custom">Deletar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
