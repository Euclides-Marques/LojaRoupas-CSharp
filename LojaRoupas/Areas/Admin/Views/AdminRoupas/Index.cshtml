@model IEnumerable<LojaRoupas.Models.Roupa>

@{
    ViewData["Title"] = "::LOJA ROUPA";
}

<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
</head>

<style>
    h1, .table th, .table td {
        text-align: center;
    }

    .btn-custom {
        margin-right: 5px;
    }

    .crud-actions a {
        margin: 0 10px;
    }

    h1 {
        margin-bottom: 20px;
    }

    .btn-success {
        margin-bottom: 20px;
    }

    .table {
        margin-top: 20px;
    }

    #nome {
        padding-top: 15px;
    }

    #btnVoltar {
        margin-left: 80%;
    }
</style>

@*Aqui e em todos os códigos feitos na área de admin, será um CRUD,
    para que eu possa criar, deletar, editar ou ver os meus cadastros de roupas, marcas, categorias
*@
<div class="container my-4">
    <h1>ROUPAS</h1>
    <a asp-action="Create" class="btn btn-success mb-3">Criar Roupa</a>
    <a asp-area="Admin" asp-controller="Admin" asp-action="Index" id="btnVoltar" class="btn btn-secondary mb-3">Voltar</a>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nome)</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var roupa in Model)
            {
                <tr>
                    <td id="nome">@Html.DisplayFor(modelItem => roupa.Nome)</td>
                    <td class="crud-actions">
                        <a asp-action="Editar" asp-route-id="@roupa.Id" class="btn btn-warning btn-custom">Editar</a>
                        <a asp-action="Detalhes" asp-route-id="@roupa.Id" class="btn btn-info btn-custom">Detalhes</a>
                        <a asp-action="Deletar" asp-route-id="@roupa.Id" class="btn btn-danger btn-custom">Deletar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
