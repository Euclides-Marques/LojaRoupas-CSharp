@model LojaRoupas.Models.Roupa

@{
    ViewData["Title"] = "::LOJA ROUPA";
}

<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
</head>

<style>
    body {
        margin: 0;
        padding: 0;
        height: 100vh;
        font-family: Arial, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
    }

    .card {
        top: 51.5%;
        left: 50%;
        transform: translate(-50%, -50%);
        border: 1px solid #ccc;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 800px;
    }

    h1 {
        text-align: center;
        margin-bottom: 1rem;
    }

    .row {
        display: flex;
        gap: 1rem;
    }

        .row .col {
            flex: 1;
        }

    .btn-group {
        width: 100%;
    }

        .btn-group .btn {
            flex: 1;
        }

    img {
        width: 30%;
    }

    #rowsCarousel {
        filter: invert(1); 
    }

</style>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col text-center">
                        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class="d-block mx-auto" src="@Html.DisplayFor(model => model.ImagemUrl)" alt="First slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block mx-auto" src="@Html.DisplayFor(model => model.ImagemUrl)" alt="Second slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block mx-auto" src="@Html.DisplayFor(model => model.ImagemUrl)" alt="Third slide">
                                </div>
                            </div>
                            <a id="rowsCarousel" class="carousel-control-prev" href="#carouselExampleControls" role="button" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </a>
                            <a id="rowsCarousel" class="carousel-control-next" href="#carouselExampleControls" role="button" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <p><strong>Nome:</strong> @Html.DisplayFor(model => model.Nome)</p>
                        <p><strong>Tamanho:</strong> @Html.DisplayFor(model => model.Tamanho)</p>
                        <p><strong>Cor:</strong> @Html.DisplayFor(model => model.Cor)</p>
                        <p><strong>Material:</strong> @Html.DisplayFor(model => model.Material)</p>
                        <p><strong>Preço:</strong> @Html.DisplayFor(model => model.Preco)</p>
                    </div>
                    <div class="col">
                        <p><strong>Em Estoque:</strong> @Html.DisplayFor(model => model.Estoque)</p>
                        <p><strong>Descrição:</strong> @Html.DisplayFor(model => model.Descricao)</p>
                        <p><strong>Gênero:</strong> @(Model.Genero == "F;M" ? "Unissex" : (Model.Genero == "F" ? "Feminino" : "Masculino"))</p>
                        <p><strong>Categoria:</strong> @Html.DisplayFor(model => model.Categoria.Nome)</p>
                        <p><strong>Marca:</strong> @Html.DisplayFor(model => model.Marca.Nome)</p>
                    </div>
                </div>

                <div class="form-group mt-3 btn-group d-flex">
                    <a asp-action="AddCarrinho" asp-controller="Main" asp-route-id="@Model.Id" class="btn btn-primary">Comprar</a>
                    <a asp-action="Index" class="btn btn-secondary">Retornar</a>
                </div>
            </div>
        </div>
    </div>
</div>
