@{
    ViewData["Title"] = "::LOJA ROUPA";
}

<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />

    <style>
        .container-contratos {
            margin-top: 7%;
        }

        .notify {
            position: fixed;
            bottom: 20px;
            left: 20px;
            right: 20px;
            padding: 15px 25px;
            border-radius: 8px;
            font-weight: bold;
            z-index: 9999;
            color: white;
            text-align: center;
            display: none;
        }

        .notify-success {
            background-color: #4CAF50;
        }

        .notify-error {
            background-color: #f44336;
        }

        .table {
            margin-top: 23px;
        }
    </style>
</head>

<div>
    <partial name="_LayoutSuperior" />
</div>

<div class="container-contratos">
    <h3>Contratos</h3>

    <div id="notify" class="notify"></div>

    <form id="formImportacao" enctype="multipart/form-data" class="d-flex gap-2 align-items-center">
        <input type="file" name="arquivo" class="form-control" />
        <button type="submit" class="btn btn-primary">Importar</button>
    </form>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Nome</th>
                <th>CPF</th>
                <th>Contrato</th>
                <th>Produto</th>
                <th>Valor</th>
                <th>Usuário</th>
                <th>Arquivo</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nome</td>
                    <td>@item.CPF</td>
                    <td>@item.NumeroContrato</td>
                    <td>@item.Produto</td>
                    <td>R$ @item.Valor</td>
                    <td>@item.UsuarioImportador</td>
                    <td>@item.DataImportacao.ToShortDateString()</td>
                    <td>
                        <a asp-action="DetalhesContrato" asp-route-id="@item.Id" class="btn btn-info btn-sm">Ver</a>
                        <a asp-action="ResumoCliente" asp-route-id="@item.Id" class="btn btn-success btn-sm">Consulta Total</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @* Paginação de 5 em cinco contratos*@
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center mt-4">
            @for (int i = 1; i <= (int)ViewBag.TotalPaginas; i++)
            {
                <li class="page-item @(ViewBag.PaginaAtual == i ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Contrato", "Main", new { page = i })">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
        $("#formImportacao").submit(function (e) {
        e.preventDefault();

        var fileInput = $('input[name="arquivo"]')[0];
        if (!fileInput.files.length) {
            showNotify("Selecione um arquivo para importar.", false);
            return;
        }

        var formData = new FormData(this);

        $.ajax({
            url: '@Url.Action("ImportarContratos", "Main")',
            type: 'POST',
            data: formData,
            processData: false,
            contentType: false,
            success: function () {
                showNotify("Importado com sucesso!", true);
                setTimeout(function () {
                    location.reload();
                }, 3000);
            },
            error: function (xhr) {
                let msg = xhr.responseText || "Erro ao importar o arquivo!";
                showNotify(msg, false);
            }
        });
    });

    function showNotify(message, isSuccess) {
        var notify = $("#notify");
        notify.text(message)
        .removeClass("notify-success notify-error")
        .addClass(isSuccess ? "notify-success" : "notify-error")
        .fadeIn();

        setTimeout(function () {
            notify.fadeOut();
        }, 3000);
    }
</script>
