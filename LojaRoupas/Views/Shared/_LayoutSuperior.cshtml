@inject LojaRoupas.Context.AppDbContext _context

@{
    var categorias = _context.Categorias.ToList();

    ViewData["Title"] = "::LOJA ROUPA";
}

<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
</head>

<style>

    #sair, #minhaConta, #admin {
        color: #fff;
        margin-right: 20px;
    }

        #sair:hover {
            color: #c0c0c0;
        }

    a {
        text-decoration: none;
    }

    .container {
        padding-top: 30px;
    }

    #logoPreta {
        width: 30%;
    }

    .input-group {
        width: 20%;
    }

        .input-group .form-control {
            border-radius: 50px !important;
            border: 1px solid #ccc;
        }

    #search-addon {
        background-color: transparent;
        border: 0;
        transition: transform 0.4s ease;
    }

        #search-addon:hover {
            cursor: pointer;
            transform: scale(1.5);
        }

    #search {
        border-radius: 50%;
    }

    input::placeholder {
        text-align: center;
    }


    .icons {
        display: flex;
        gap: 30px;
    }

        .icons i {
            font-size: 1.5em;
        }

    #cart {
        transform: scaleX(-1);
        color: #000;
    }

        #cart:hover {
            cursor: pointer;
            color: #696969;
        }

    #heart {
        color: #FF0000;
        cursor: pointer;
        transition: transform 0.3s ease-in-out;
    }

    #menu {
        width: 100%;
        position: fixed;
        top: 60px;
        left: 0;
        margin-top: 50px;
        transition: top 0.1s ease-in-out;
    }

        #menu .navbar-nav {
            display: flex;
            justify-content: center;
            gap: 30px;
            width: 100%;
        }

        #menu .nav-link {
            color: #fff;
            position: relative;
            transition: color 0.3s ease;
            text-transform: uppercase;
        }

            #menu .nav-link:not(.dropdown-toggle)::after {
                content: '';
                position: absolute;
                bottom: 5px;
                left: 7px;
                width: 0;
                height: 1px;
                background-color: #c0c0c0;
                transition: width 0.3s ease-in-out;
            }

            #menu .nav-link:not(.dropdown-toggle):hover::after {
                width: 90%;
            }

    .dropdown:hover .dropdown-menu {
        display: block;
    }
</style>

<nav class="navbar fixed-top navbar-dark bg-dark">
    <div class="ms-auto d-flex align-items-center gap-3">
        @if (User.IsInRole("Admin"))
        {
            <a asp-area="Admin" asp-controller="Admin" asp-action="Index">
                <span id="admin">
                    <i class="fas fa-user-shield"></i>
                    Admin
                </span>
            </a>
        }
        <a asp-controller="AreaCliente" asp-action="MeusDados">
            <span id="minhaConta">
                <i class="fas fa-user"></i>
                Minha conta
            </span>
        </a>
        <a asp-controller="Home" asp-action="Index">
            <span id="sair">
                <i class="fas fa-sign-out-alt fa-rotate-180"></i>
                Sair
            </span>
        </a>
    </div>
</nav>

<div id="itemsContainer" class="container flex-wrap d-none d-md-flex align-items-center justify-content-between">
    <img class="img-responsive" src="~/images/logoPreta.png" id="logoPreta" />
    <div class="input-group rounded">
        <input type="search" class="form-control rounded" placeholder="O que você procura?" aria-label="Search" aria-describedby="search-addon" />
        <span class="input-group-text border-0" id="search-addon">
            <i class="fas fa-search"></i>
        </span>
    </div>
    <div class="icons">
        <i id="heart" class="fas fa-heart"></i>
        <i id="cart" class="fa fa-shopping-cart"></i>
    </div>
</div>

<nav id="menu" class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Home</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Categorias
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        @foreach (var cat in categorias)
                        {
                            <li><a class="dropdown-item" href="#">@cat.Nome</a></li>
                        }
                    </ul>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Lançamentos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Promoções</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Fique por dentro</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Contato</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Imagens</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<script>
    const heart = document.getElementById('heart');
    let interval;

    function startAnimation() {
        heart.style.transform = 'scale(1.3)';
        interval = setInterval(function () {
            heart.style.transform = heart.style.transform === 'scale(1.3)' ? 'scale(1)' : 'scale(1.3)';
        }, 400);
    }

    function stopAnimation() {
        clearInterval(interval);
        heart.style.transform = 'scale(1)';
    }

    heart.addEventListener('mouseover', startAnimation);
    heart.addEventListener('mouseout', stopAnimation);

    const container = document.getElementById('itemsContainer');
    const menu = document.getElementById('menu');

    if (menu) {
        window.addEventListener('scroll', function(){
            if (window.scrollY > 50) {
                menu.style.top = '-9px';
            } else {
                menu.style.top = '60px';
            }
        });
    }
</script>